{
  "compilerOptions": {
    "module": "commonjs",
    "importHelpers": true,
    "declaration": false,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "noImplicitAny": false
  },
  "compileOnSave": true,
  "include": ["src/**/*.ts", "src/utils/web3.js", "tests/**/*.ts"],
  "exclude": ["node_modules"]
}
